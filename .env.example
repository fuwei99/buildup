# Buildup 代理服务环境变量配置
# 复制此文件为 .env 并修改相应值

# 服务端口
PORT=7860

# 主机地址 (通常保持 0.0.0.0)
HOST=0.0.0.0

# 流式响应模式 (real 或 fake)
STREAMING_MODE=real

# 失败阈值 - 连续失败多少次后触发账号切换
FAILURE_THRESHOLD=0

# 最大重试次数
MAX_RETRIES=3

# 重试延迟 (毫秒)
RETRY_DELAY=3000

# API密钥 (可选，多个密钥用英文逗号分隔)
API_KEYS=

# 初始认证索引 (可选)
INITIAL_AUTH_INDEX=

# 立即切换状态码 (用英文逗号分隔)
IMMEDIATE_SWITCH_STATUS_CODES=429,503

# 调试模式 (true 或 false)
DEBUG_MODE=false

# 资源限制配置
MEMORY_LIMIT=2g
CPU_LIMIT=1.0
MEMORY_RESERVATION=512m
CPU_RESERVATION=0.5

# 认证配置示例 (如需使用环境变量认证)
# AUTH_JSON_1={"username":"your_username1","password":"your_password1"}
# AUTH_JSON_2={"username":"your_username2","password":"your_password2"}